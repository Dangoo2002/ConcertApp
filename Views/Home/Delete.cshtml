@model ConcertBaseViewModel

<h1>Delete Concert</h1>

<h3>Are you sure you want to delete this concert?</h3>
<div>
    <h4>Concert</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.ConcertDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ConcertId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", "Concerts", null, new { @class = "btn btn-secondary" })
    </form>
</div>
